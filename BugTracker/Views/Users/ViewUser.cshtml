@model Users

<h3>@Model.UserID Information</h3>

<table class="table">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>email</th>
        <th>Title</th>
        <th>Password</th>
    </tr>


    <tr>
        <td>@Model.UserID</td>
        <td>@Model.FirstName</td>
        <td>@Model.LastName</td>
        <td>@Model.email</td>
        <td>@Model.Title</td>
        <td>@Model.Password</td>
    </tr>

</table>

<div style="display: block">
    <a href="/Users/UpdateUser/@Model.UserID">Update this User</a>
</div>

<div style="display: block">
    @using (Html.BeginForm("DeleteUser", "Users", "Post"))
    {
        <input type="hidden" asp-for="UserID" value="@Model.UserID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this User" />
    }
</div>
<div style="display: block">
    <a href="/Users/Index">Back to Users</a>
</div>
